<h1>Burgers</h1>

<h2>Yet to be Devoured</h2>

<ul>
    {{!-- update --}}
    {{#each burger}}
        {{#unless this.devoured}}
            {{this.id}}{{this.burger_name}}<button class="devour" data-id="{{this.id}}" data-devour="{{this.devoured}}">
                Devour Burger
            </button>
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
    {{!-- update --}}
    {{#each burger}}
        {{#if this.devoured}}
             {{this.id}}{{this.burger_name}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add your burger!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="name">
    </div>

    <div class="form-group">
        <label for="isDevoured">is Devoured?</label>
        <br>
        <input type="radio" name="devoured" value="0" checked>Not devoured
        <br>
        <input type="radio" name="devoured" value="1"> is devoured
    </div>

    <button type="submit">Add Burger</button>
</form>